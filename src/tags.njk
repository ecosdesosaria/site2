---
pagination:
  data: collections
  size: 1
  alias: tag
filter:
  - all
  - blog
permalink: "/tags/{{ tag | slug }}/index.html"
layout: base.njk
---

<div class="container my-5">
  <h1>#{{ tag }}</h1>

  {% for post in collections[tag] %}
    <div class="uo-card mb-4 p-4">
      <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
      <small>{{ post.date | readableDate }}</small>
    </div>
  {% endfor %}

  <a href="/blog/" class="uo-btn btn-sm mt-3">‚Üê Voltar</a>
</div>
